// ~/Library/Application Support/Code/User/settings.json

{
    "workbench.colorTheme": "Default Dark+",
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrapColumn": 200,
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "workbench.tree.indent": 26,

    "workbench.colorCustomizations": {
        "editor.background": "#2f2f2f",
        "sideBar.background": "#252525",
        "editor.lineHighlightBackground": "#383838",
        "editor.selectionHighlightBackground": "#0077ff75", // подсветка таких же, как выделенный текст
        "tab.activeBackground": "#535353"
    },

    "editor.tokenColorCustomizations": {
        "comments": "#888888",
        "strings": "#95B184"
    },

    "files.autoSave": "onFocusChange",
    // "[php]": {
    //     "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    // },
    "intelephense.format.braces": "k&r",

    // liveSassCompile ---------------
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",       // expanded(def) | compact | compressed | nested
            "extensionName": ".min.css",  // .css(def) | .min.css
            "savePath": "/css"     // "/assets/css/"
        }
    ],
    "liveSassCompile.settings.generateMap": false,
    "[sass]": {
        "editor.defaultFormatter": "syler.sass-indented"
    },
    "launch": {
        "configurations": [],
        "compounds": []
    },
    "json.schemas": [
    
    ],
    "terminal.integrated.tabs.enabled": true,
    // liveSassCompile end ------------

    // плавное появление печатаемого текста
    "editor.cursorSmoothCaretAnimation": true,

    "ecsstractor_port.bem_nesting": true,
    "ecsstractor_port.brackets_newline_after": false,
    "ecsstractor_port.brackets": false,
    "ecsstractor_port.empty_line_before_nested_selector": false,
    "ecsstractor_port.indentation": "  ",
    "ecsstractor_port.modifier_separator": "--",
    
    "workbench.startupEditor": "none",
    "editor.renderWhitespace": "all"

}